<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="codegym.mod04.model.Employee" table="employee">
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="name" />
        </property>
        <property name="occupation" type="java.lang.String">
            <column name="occupation" />
        </property>
        <property name="salary" type="java.math.BigDecimal">
            <column name="salary" />
        </property>
        <property name="age" type="int">
            <column name="age" />
        </property>
        <property name="birthdate" type="java.time.LocalDate">
            <column name="birthdate" />
        </property>
    </class>
</hibernate-mapping>
